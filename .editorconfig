# This file configures editors using the EditorConfig
# scheme: https://editorconfig.org/

root = true

[*.{c,cpp,h}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
[{.editorconfig}]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[CMakeLists.txt]
indent_size = 2
indent_style = space
max_line_length = 80
[*.cmake]
indent_size = 2
indent_style = space
max_line_length = 80

[*.{c,cpp,h}]
indent_size = 2
indent_style = space
max_line_length = 80

